<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE tiles-definitions PUBLIC  
      "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"  
      "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<!-- Base Define -->
	<definition name="base" template="/WEB-INF/tiles/classic.jsp">
		<put-attribute name="title" value="" />
		<put-attribute name="header" value="/WEB-INF/fragments/_header.jsp" />
		<put-attribute name="section" value="" />
		<put-attribute name="footer" value="/WEB-INF/fragments/_footer.jsp" />	
	</definition>
	
	<definition name = "*" extends = "base">
		<put-attribute name="title" value="Page Title"></put-attribute>
		<put-attribute name="section" value="/WEB-INF/views/{1}.jsp"></put-attribute>
	</definition>
	
	<definition name = "*/*" extends = "base">
		<put-attribute name="title" value="Page Title"></put-attribute>
		<put-attribute name="section" value="/WEB-INF/views/{1}/{2}.jsp"></put-attribute>
	</definition>
</tiles-definitions>